<!--index.wxml-->
<view class="container">


  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" bindchange="bindchange" indicator-active-color="{{indicatorActiveColor}}" indicator-color="{{indicatorColor}}" style="height:{{bannerHeight[current]}}rpx;">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" data-id='{{index}}' class="slide-image" width="355" height="150" bindload="imageLoad" />
      </swiper-item>
    </block>
  </swiper>

  <view class="case dpBox">
    <text class='title'><text class='dot'></text>推荐案例</text>
    <view class='btnList'>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮546</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮12321</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮23</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮312</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮43534</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮</i-button>
      <i-button bind:click="" type="primary" size="small" inline="false" shape="circle" style="">按钮s54654</i-button>
    </view>
    <view class='list'>
      <i-row>
        <i-col span="12" i-class="col-class" wx:for="{{recommend}}" wx:key="{{index}}">
          <image class='itemIcon' src="{{item.url}}" mode='widthFix' />
          <text class='itemTitle'>{{item.title}}</text>
        </i-col>
      </i-row>
    </view>
  </view>


  <view class="server dpBox">
    <text class='title'><text class='dot'></text>我们的服务</text>
    <view class='list'>
      <i-row>
        <i-col span="12" i-class="col-class" wx:for="{{server}}" wx:key="{{index}}">
          <image class='itemIcon' src="{{item.url}}" mode='widthFix' />
          <text class='itemTitle'>{{item.title}}</text>
          <text class='itemDesc'>{{item.desc}}</text>
        </i-col>
      </i-row>
    </view>
  </view>

  <view class="develop dpBox">
    <view class='top'></view>
    <text class='title'><text class='dot'></text>我们的服务</text>
    <view class='list'>
      <i-row>
        <i-col span="24" i-class="col-class" wx:for="{{develop}}" wx:key="{{index}}">
          <view class='bg'>
            <image class='itemIcon' src="{{item.url}}" mode='widthFix' />
            <text class='itemTitle'>{{item.title}}</text>
            <text class='itemDesc'>{{item.desc}}</text>
            <text class='bgview'></text>
          </view>
        </i-col>
      </i-row>
    </view>
  </view>




</view>