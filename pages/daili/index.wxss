/* pages/dingzhi/index.wxss */

.banner {
  position: relative;
  height: auto;
  padding: 0;
  margin: 0;
  background: #f9f9f9;
}

.banner image {
  width: 100%;
}

.banner .title {
  position: absolute;
  top: 30%;
  left: 20px;
  width: 100%;
  color: #fff;
}

.list, .list2, .list3 {
  margin-bottom: 50px;
}

.list .top, .list2 .top, .list3 .top {
  text-align: center;
  margin: 15px 0;
}

.list .top .title-cn, .list2 .top .title-cn, .list3 .top .title-cn {
  color: #333;
  margin-bottom: 5px;
}

.list .top .title-en, .list2 .top .title-en, .list3 .top .title-en {
  color: #ccc;
  font-weight: bold;
}

.list  i-col {
  text-align: center;
}

.list .itemIcon {
  width: 50%;
}

.list {
  padding: 7.5px;
}

.list .inner {
  padding: 0 7.5px;
}

.list .inner .bg .title {
  font-size: 15px;
  margin-top: 10px;
}

.list .inner .bg .desc {
  font-size: 12px;
  margin: 10px 0;
  color: #999;
}

.list  .desc{
  padding: 0 15px;
  font-size: 14px;
  text-align: center;
}

.list2 .inner {
  padding: 7.5px 15px;
}

.list2 .inner .bg {
  box-shadow: rgba(0, 0, 0, 0.15) 1px 1px 5px;
  padding: 15px 10px;
  position: relative;
  border-radius: 3px;
}

.list2 .inner .bg image {
  width: 70px;
}

.list2 .inner .bg .right {
  position: absolute;
  top: 10px;
  left: 0;
  padding-left: 95px;
  padding-right: 5px;
}

.list2 .inner .bg .right .title {
  font-size: 18px;
  color: #333;
  margin-bottom: 5px;
}

.list2 .inner .bg .right .desc {
  font-size: 14px;
  color: #999;
}
.list3 .textGroup{
  margin-top: 20px;
}
.list3 .textGroup .item {
  padding: 0 15px;
  margin: 10px 0;
  font-size: 15px;
  color: #333;
}
.list3 .textGroup .item i-avatar{
  margin-right: 10px;
  color: #ccc;
  font-weight: bold;
}
