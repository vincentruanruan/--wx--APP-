/* pages/dingzhi/index.wxss */

.banner {
  position: relative;
  height: auto;
  padding: 0;
  margin: 0;
  background: #f9f9f9;
}

.banner image {
  width: 100%;
}

.banner .title {
  position: absolute;
  top: 30%;
  left: 20px;
  width: 100%;
  color: #fff;
}

.list, .list2, .list3 {
  margin-bottom: 50px;
}

.list .top, .list2 .top, .list3 .top {
  text-align: center;
  margin: 15px 0;
}

.list .top .title-cn, .list2 .top .title-cn, .list3 .top .title-cn {
  color: #333;
  margin-bottom: 5px;
}

.list .top .title-en, .list2 .top .title-en, .list3 .top .title-en {
  color: #ccc;
  font-weight: bold;
}

.list  i-col {
  text-align: center;
}

.list .itemIcon {
  width: 50%;
}

.list {
  padding: 7.5px;
}

.list .inner {
  padding: 0 7.5px;
}

.list .inner .bg .title {
  font-size: 15px;
  margin-top: 10px;
}

.list .inner .bg .desc {
  font-size: 12px;
  margin: 10px 0;
  color: #999;
}

.list2 {
  padding: 7.5px;
}

.list2 .inner {
  padding: 0 7.5px;
  margin-bottom: 20px;
}

.list2 .inner .bg {
  position: relative;
  box-shadow: rgba(0, 0, 0, 0.1) 1px 1px 5px;
  padding: 10px;
}

.list2 .inner .bg .num {
  color: #108bec;
  font-size: 40px;
  margin-left: 10px;
}

.list2 .inner .bg .title {
  font-size: 14px;
  margin-top: 10px;
}

.list2 .inner .bg .desc {
  font-size: 12px;
  margin: 15px 0;
  color: #999;
}

.list2 .inner .bg .circle {
  z-index: -1;
  position: absolute;
  height: 40px;
  width: 40px;
  border-radius: 50%;
  display: inline-block;
  top: 15px;
  left: 10px;
  background: #d3efff;
}

.list3 .img {
  padding: 0 15px;
  padding-top: 30px;
}

.list3 .img image {
  width: 100%;
}
